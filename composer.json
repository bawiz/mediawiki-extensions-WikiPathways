{
	"name": "wikipathways/wikipathways",
	"extra": {
		"installer-name": "WikiPathways"
	},
	"type": "mediawiki-extension",
	"description": "Brings Wikipathways to life",
	"keywords": ["mediawiki", "wiki"],
	"homepage": "https://www.wikipathways.org/",
	"require": {
		"php": ">=5.6.0",
		"composer/installers": "1.*,>=1.0.1"
	},

	"scripts": {
		"lint": "parallel-lint --exclude vendor",
		"phpcs": "phpcs -p -s",
		"fix": "phpcbf --standard=/home/mah/work/code/mediawiki/codesniffer/MediaWiki",
		"pre-install-cmd": "ComposerHookHandler::onPreInstall",
		"pre-update-cmd": "ComposerHookHandler::onPreUpdate",
		"test": [
			"composer lint",
			"composer phpcs"
		]
	}
}
